<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/app_name"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/txttitle1"
            android:layout_width="412dp"
            android:layout_height="1002dp"
            android:padding="4pt"
            android:text="@string/txttitle1"
            android:textAlignment="center"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="336dp"
            android:layout_height="223dp"
            android:text="@string/txtDescription"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txttitle1"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txttitle1"
            app:layout_constraintVertical_bias="0.198" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="303dp"
            android:layout_height="49dp"
            android:text="Registrar"
            app:layout_constraintBottom_toBottomOf="@+id/txttitle1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.733"
            app:layout_constraintStart_toStartOf="@+id/txttitle1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.501" />

        <Button
            android:id="@+id/btnStadistics"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:text="Estadisticas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txttitle1"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txttitle1"
            app:layout_constraintVertical_bias="0.549" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="299dp"
            android:layout_height="54dp"
            android:text="Ayuda"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.607"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.599" />

        <TextView
            android:id="@+id/txtdevelop1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtdevelop1"
            app:layout_constraintBottom_toBottomOf="@+id/txttitle1"
            app:layout_constraintEnd_toEndOf="@+id/txttitle1"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.657" />

        <TextView
            android:id="@+id/txtdevelop2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtdevelop2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/txttitle1"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.681" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>





